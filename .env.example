# Ecommerce Visual Pro Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=Ecommerce Visual Pro
DEBUG=false

# =============================================================================
# STORAGE
# =============================================================================
# Options: "local" or "gcs"
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=storage

# Google Cloud Storage (required if STORAGE_TYPE=gcs)
GCS_BUCKET_NAME=your-bucket-name
GCS_PROJECT_ID=your-project-id
GCS_CREDENTIALS_PATH=/path/to/service-account.json

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5.0

# =============================================================================
# CELERY
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ACKS_LATE=true
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_TASK_TIME_LIMIT=600
CELERY_RESULT_EXPIRES=3600

# =============================================================================
# AI SERVICES
# =============================================================================
# Background Removal (RMBG-1.4)
# Leave empty to use local model, or set API URL for remote inference
RMBG_API_URL=
RMBG_API_KEY=

# Scene Generation (Flux/SDXL)
FLUX_API_URL=https://api.replicate.com/v1/predictions
FLUX_API_KEY=your-replicate-api-key

# Relighting (IC-Light)
ICLIGHT_API_URL=
ICLIGHT_API_KEY=

# API Settings
AI_API_TIMEOUT=180.0
AI_API_MAX_RETRIES=3

# =============================================================================
# AUTHENTICATION
# =============================================================================
AUTH_ENABLED=false

# Comma-separated list of valid API keys
API_KEYS=key1,key2,key3

# JWT Settings (optional)
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
